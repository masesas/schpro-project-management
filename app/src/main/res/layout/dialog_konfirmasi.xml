<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rounded_shape_black"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_regular"
            android:text="Peringatan"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_peringatan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="Yakin ingin keluar dari\nproject?"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginBottom="@dimen/common_margin"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_batal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/hint_color"
                android:fontFamily="@font/rubik_regular"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/grey_text2"
                android:textStyle="bold"
                app:shapeAppearanceOverlay="@style/RoundedButtonMd" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_konfirmasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/rubik_regular"
                android:text="Konfirmasi"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:shapeAppearanceOverlay="@style/RoundedButtonMd" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>